{% extends "base.html.twig" %}

{% block body %}
    <section class="home__main">
        <div class="home__container-categories">
            <div class="home__container-category home__container-viaggi">
                <h2 class="home__category-title h2">Viaggi</h2>
                <p class="home__category-description body-2">I Viaggi di ViaggIn: itinerari, destinazioni e curiosità da ogni parte del mondo</p>
                <a class="button button--black" href="{{ path('app_category_viaggi', {pageNumber: 0}) }}">Scopri di più</a>
            </div>
            <div class="home__container-category home__container-eventi">
                <h2 class="home__category-title h2">Eventi</h2>
                <p class="home__category-description body-2">Gli Eventi di ViaggIn: musei, sagre, feste, esposizioni e curiosità da ogni parte del mondo</p>
                <a class="button button--black" href="{{ path('app_category_eventi', {pageNumber: 0}) }}">Scopri di più</a>
            </div>
            <div class="home__container-category home__container-documenti">
                <h2 class="home__category-title h2">Documenti</h2>
                <p class="home__category-description body-2">Documenti di viaggio di ViaggIn: guide per viaggiare informati</p>
                <a class="button button--black" href="{{ path('app_category_documenti', {pageNumber: 0}) }}">Scopri di più</a>
            </div>
            <div class="home__container-category home__container-estero">
                <h2 class="home__category-title h2">Vivere all'estero</h2>
                <p class="home__category-description body-2">Vivere all'estero: guide pratiche, accurate e aggiornate per trasferisi a vivere all'estero</p>
                <a class="button button--black" href="{{ path('app_category_estero', {pageNumber: 0}) }}">Scopri di più</a>
            </div>
        </div>
    </section>
    <section class="search">
        {{ form_start(searchForm, {'action': path('app_search')}) }}
            <div class="search__form-wrapper">
                <div class="search__form-header">
                    <h2 class="h2">Cerca su ViaggIn</h2>
                </div>
                <div class="search__form-search-field">
                    {{ form_row(searchForm.search) }}
                </dv>
                <div class="search__form-submit-field">
                    {{ form_row(searchForm.submit) }}
                </div>
            </div>
        {{ form_end(searchForm) }}
    </section>
    <section class="home__container-articles">
        <div class="home__container-title">
            <h2 class="h2">Ultimi Articoli</h2>
        </div>
        {% for article in articles %}
            <div class="article-card">
                <a href="{{ path('app_article', {'slug': article.url}) }}" class="article-card__link link-no-style">
                    <div class="article-card__container-title">
                        <h2 class="h3">{{ article.title }}</h2>
                    </div>
                    <div class="article-card__container-data">
                        <span class="article-card__data body-6">Pubblicato il {{ article.date|date('d/m/Y') }}</span>
                    </div>
                    <div class="article-card__container-content">
                        <div class="article-card__paragraph body-2">
                            <img class="article-card__img" src="../images/{{ article.file_name }}" alt="{{ article.alternative_text }}" width="150" height="100">
                            {% set articleContent = article.content|striptags|slice(0, 300) ~ '...' %}
                            {{ articleContent|raw }}
                        </div>
                    </div>
                </a>
            </div>
        {% endfor %}
        <div class="home__container-all-article">
            <a href="{{ path('app_article_list') }}" class="button button--yellow">Scopri tutti gli articoli</a>
        </div>
    </section>
{% endblock %}