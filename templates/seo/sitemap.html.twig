    <url>
        <loc>https://viaggin.com/contatti</loc>
    </url>
    <url>
        <loc>https://viaggin.com/contatti-conferma</loc>
    </url>
    {% for author in authors %}
        <url>
            <loc>https://viaggin.com/autori/{{ author.url }}</loc>
        </url>
    {% endfor %}
    {% for tag in tags %}
        <url>
            <loc>https://viaggin.com/tag/{{ tag.url }}</loc>
        </url>
    {% endfor %}
    <url>
        <loc>https://viaggin.com/autori/tutti-gli-autori</loc>
    </url>
    {% set getDateToday = "now"|date('U') %}
    {% for article in articles %}
        {% if (getDateToday > article.date|date('U')) %}
            <url>
                <loc>https://viaggin.com/{{ article.url }}</loc>
                <lastmod>{{ article.getUpdateAt|date('Y-m-d') }}</lastmod>
            </url>
        {% endif %}
    {% endfor %}
</urlset>