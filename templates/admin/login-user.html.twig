{% extends 'base.html.twig' %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="login-user">
        <form action="{{ path('app_login_user') }}" method="post">
            <div class="login-user__grid">
                <div class="login-user__email">
                    <input type="text" id="username" name="_username" placeholder="email" value="{{ last_username }}"/>
                </div>
                <div class="login-user__password">
                    <input type="password" id="password" name="_password" placeholder="password" />
                </div>
                <div class="login-user__submit">
                    <button class="button button--white" type="submit">login</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}